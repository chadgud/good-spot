<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit <%= spot.name %>
        </h1>
        <div class="col-6 offset-3">
            <form action="/spots/<%= spot._id %>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="spot[name]" value="<%= spot.name %>"
                        required>
                    <div class="invalid-feedback">
                        Please provide a name
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="spot[location]"
                        value="<%= spot.location %>" required>
                    <div class="invalid-feedback">
                        Please provide a location
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="category">Category</label>
                    <input class="form-control" type="text" id="category" name="spot[category]"
                        value="<%= spot.category %>" required>
                    <div class="invalid-feedback">
                        Please provide a category
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="cusine">Cusine</label>
                    <input class="form-control" type="text" id="cuisine" name="spot[cuisine]"
                        value="<%= spot.cuisine %>" required>
                    <div class="invalid-feedback">
                        Please provide a cuisine
                    </div>
                </div>
                <div class="input-group mt-4 mb-3">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                    <label class="input-group-text" for="image">Add More Images</label>
                </div>
                <div class="mb-3">
                    <% spot.images.forEach((img, i)=> { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                                value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>">Delete?</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Save Spot</button>
                    <a class="btn btn-danger" href="/spots/<%= spot._id %>">Cancel</a>
                </div>
            </form>
        </div>
    </div>