<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1>All Spots</h1>
    <% for(let spot of spots){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(spot.images.length) {%>
                        <img class="img-fluid" src="<%= spot.images[0].url %>" alt="">
                        <% } else {%>
                            <img src="https://images.unsplash.com/photo-1491832318808-5d13a9553e36?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1708&q=80"
                                alt="" class="img-fluid">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= spot.name %>
                        </h5>
                        <p class="card-text mb-0">
                            <%= spot.cuisine %>
                        </p>
                        <p class="card-text mt-0 text-muted">
                            <%= spot.location %>
                        </p>
                        <a href="/spots/<%= spot._id %> " class="btn btn-primary">View <%= spot.name %> </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const spots = { features: <%- JSON.stringify(spots) %> }
            </script>
            <script src="/scripts/clusterMap.js"></script>