<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Spot</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/spots" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="spot[name]" required>
                    <div class="invalid-feedback">
                        Please provide a name
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="spot[location]" required>
                    <div class="invalid-feedback">
                        Please provide a location
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="category">Category</label>
                    <input class="form-control" type="text" id="category" name="spot[category]" required>
                    <div class="invalid-feedback">
                        Please provide a category
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="cusine">Cusine</label>
                    <input class="form-control" type="text" id="cuisine" name="spot[cuisine]" required>
                    <div class="invalid-feedback">
                        Please provide a cuisine
                    </div>
                </div>
                <div class="input-group mt-4 mb-3">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                    <label class="input-group-text" for="image">Add More Images</label>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Spot</button>
                    <a class="btn btn-danger" href="/spots">Cancel</a>
                </div>
            </form>
        </div>
    </div>